<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/btn_white_normal"
    android:layout_height="match_parent">
<cv.yyh.com.mycrollviewdemo.LinearScrollView
    android:layout_width="match_parent"
    android:id="@+id/lcol_view"
    android:orientation="horizontal"
    android:background="@color/wblack"
    android:layout_height="200dp">

    <TextView
        android:layout_width="200dp"
        android:text="我这边是可以的,一定要成功的"
        android:gravity="center"
        android:background="@color/red"
        android:layout_height="match_parent"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="100dp"
        android:text="我这边是 "
        android:gravity="center"
        android:background="@color/bg_color"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="200dp"
        android:text="我这边是 "
        android:gravity="center"
        android:background="@color/yellow1"
        android:layout_height="match_parent"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/iv_scrollview"/>

</cv.yyh.com.mycrollviewdemo.LinearScrollView>
</LinearLayout>